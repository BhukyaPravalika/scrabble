{
  "name": "project01",
  "version": "1.0.0",
  "description": "A scrabble game for GA WDI project",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run start-server",
    "start-server": "http-server dist",
    "test": "standard",
    "clean": "rm -rf dist",
    "build": "npm run clean && mkdir dist && npm run build-html && npm run build-css && npm run build-js",
    "build-html": "cp game/index.html dist/index.html",
    "build-css": "cp -r game/css/ dist/css",
    "build-js": "browserify game/scrabble.js --outfile dist/scrabble.js --transform babelify",
    "watch": "npm run build && npm run watch-js & npm run watch-css & npm run watch-html & npm run start-server",
    "watch-html": "watch-spawn -p 'game/index.html' npm run build-html",
    "watch-css": "watch-spawn -p 'game/css/scrabble.css' npm run build-css",
    "watch-js": "watchify game/scrabble.js --outfile dist/scrabble.js --transform babelify --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/caalberts/scrabble.git"
  },
  "keywords": [
    "scrabble",
    "ga",
    "wdi"
  ],
  "author": "Albert Salim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/caalberts/scrabble/issues"
  },
  "homepage": "https://github.com/caalberts/scrabble#readme",
  "dependencies": {
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "dragula": "^3.5.4",
    "http-server": "^0.8.5",
    "lodash.difference": "^3.2.2",
    "lodash.first": "^3.0.0",
    "lodash.includes": "^3.1.3",
    "lodash.isempty": "^3.0.4",
    "lodash.last": "^3.0.0",
    "lodash.range": "^3.0.1",
    "lodash.sample": "^3.1.0",
    "lodash.sortby": "^3.1.5",
    "standard": "^5.3.1"
  },
  "devDependencies": {
    "watch-spawn": "^1.0.6",
    "watchify": "^3.6.0"
  }
}
